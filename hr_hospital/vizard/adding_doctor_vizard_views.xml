<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_adding_doctor_vizard_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.adding.doctor.vizard</field>
        <field name="model">hr.hospital.adding.doctor.vizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="doctor_id"/>
                    <field name="patient_ids"/>
                </group>
                <footer>
                    <button name="action_adding_model" 
                        type="object" 
                        string="Uppdate" 
                        class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id='server_action_adding_doctor_wizard' model='ir.actions.act_window'> 
        <field name='name'>Cgange doctor</field>
        <field name='res_model'>hr.hospital.adding.doctor.vizard</field>
        <field name='view_mode'>form</field> 
        <field name='target'>new</field> 
        <field name='binding_model_id' ref='model_hr_hospital_patient'/> 
        <field name='binding_view_types'>form,list</field> 
        <field name='binding_type'>action</field> 
    </record>
    
</odoo>