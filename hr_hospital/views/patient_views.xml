<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_tree_view" model="ir.ui.view">
        <field name="name">patient.tree.view</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="birthday_date"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="patient_form_view" model="ir.ui.view">
        <field name="name">patient.form.view</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="birthday_date"/>
                    <field name="age"/>
                    <field name="photo"/>
                    <field name="doctor_id"/>
                </group>
                <separator string="Contact info" colspan="4"/>
                <group col="4">
                    <field name="phone"/>
                    <field name="email"/>
                </group>
                <separator string="Pasport data" colspan="4"/> 
                <group col="4">
                    <field name="pasport_series"/>
                    <field name="pasport_number"/>
                    <field name="pasport_issued_date"/>
                    <field name="pasport_issued_by"/>   
                </group>    
            </form>
        </field>
    </record>

    <record id='action_patient' model='ir.actions.act_window'> 
        <field name='name'>Patients</field>
        <field name='res_model'>hr.hospital.patient</field> 
        <field name='view_mode'>tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This list will store information about our patients
            </p>
        </field>
    </record>
</odoo>
