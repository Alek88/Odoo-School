<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="personal_doctor_history_tree_view" model="ir.ui.view">
        <field name="name">Personal doctor history Tree</field>
        <field name="model">hr.hospital.pers.doc.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="personal_doctor_history_form_view" model="ir.ui.view">
        <field name="name">Personal doctor history form</field>
        <field name="model">hr.hospital.pers.doc.history</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id='action_personal_doctor_history' model='ir.actions.act_window'> 
        <field name='name'>Personal doctor history</field>
        <field name='res_model'>hr.hospital.pers.doc.history</field> 
        <field name='view_mode'>tree,form</field>
    </record>
</odoo>
