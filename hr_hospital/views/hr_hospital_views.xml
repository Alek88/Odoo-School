<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_hospital_tree_view" model="ir.ui.view">
        <field name="name">hr.hospital.tree.view</field>
        <field name="model">hr.hospital.type.of.research</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_form_view" model="ir.ui.view">
        <field name="name">hr.hospital.form.view</field>
        <field name="model">hr.hospital</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="logo"/>
               <!-- <field name="image_128"/> --> 
            </form>
        </field>
    </record>

    <record id='action_hr_hospital' model='ir.actions.act_window'> 
        <field name='name'>Hospital</field>
        <field name='res_model'>hr.hospital</field> 
        <field name='view_mode'>tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This list will store information about all hospitals.
            </p>
        </field>
    </record>
</odoo>    
