<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_tree_view" model="ir.ui.view">
        <field name="name">Hospital Tree</field>
        <field name="model">hr.hospital</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id='action_hr_hospital' model='ir.actions.act_window'> 
        <field name='name'>Hospital</field>
        <field name='res_model'>hr.hospital</field> 
        <field name='view_mode'>tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This page will contain general information about the hospital.
            </p>
        </field>
    </record>
</odoo>
