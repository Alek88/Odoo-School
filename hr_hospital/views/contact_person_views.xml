<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="contact_person_tree_view" model="ir.ui.view">
        <field name="name">Contact person Tree</field>
        <field name="model">hr.hospital.contact.person</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="photo"/>
            </tree>
        </field>
    </record>

    <record id='action_contact_person' model='ir.actions.act_window'> 
        <field name='name'>Contact person</field>
        <field name='res_model'>hr.hospital.contact.person</field> 
        <field name='view_mode'>tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This list will display the contact person.
            </p>
        </field>
    </record>        
</odoo>