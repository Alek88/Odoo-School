<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="doctor_tree_view" model="ir.ui.view">
        <field name="name">doctor.tree.view</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="speciality"/>
                <field name="is_intern"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
                <field name='hospital'/>
                <field name="activity_history"/>
            </tree>
        </field>
    </record>

    <record id="doctor_form_view" model="ir.ui.view">
        <field name="name">Doctor Form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <h2><field name="name"/></h2>
                <group>
                    <field name='hospital'/>
                    <field name="speciality"/>
                    <field name="gender"/>
                    <field name="is_intern"/>
                </group>
                <group string="Contact info">
                    <field name="phone"/>
                    <field name="email"/>
                </group>
                <notebook>
                    <page string="Mentor" attrs="{'invisible':[('is_intern','=',False)]}">
                        <field name="mentor_id"/>    
                    </page>
                    <page string="Interns" attrs="{'invisible':[('is_intern','=',True)]}">
                       <field name="intern_ids" mode="kanban"/>
                    </page>
                    <page string="Patients">
                        <field name="patient_ids"/> 
                    </page>
                    <page string="Activity history">
                        <field name="activity_history"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="doctor_kanban_view" model="ir.ui.view">
        <field name="name">Doctors Kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="speciality">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_canban_card_header_title">
                                <div>
                                    <strong>Name: </strong>
                                    <field name='name'/>
                                    <br/>
                                    <strong>Speciality: </strong>
                                    <field name='speciality'/>
                                </div>    
                            </div>
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn"
                                    data-toggle="dropdown" href="#">
                                    <span class="fa fa-ellipsis-v" aria-hidden="true"/>
                                </a>
                                <div class="o_canban_card_manage_setting row mt16">
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                        </t>
                                        <t t-if="widget.deletable">
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </t>  
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-xs-12" style="height: 15px;"/>

                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <button class="btn btn-primary"
                                                string="Quick appointment"
                                                name='%(hr_hospital.action_new_doctor_visit_with_doctor_vizard)d'
                                                type="action">
                                            <span>Quick appointment</span>
                                        </button>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right">
                                        <strong>Patients: </strong>
                                        <field name="patient_ids"
                                               widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Is intern" name="filter_name" domain="[('is_intern', '=', True)]"/>
                <filter string="Is mentor" name="filter_name" domain="[('is_intern', '!=', True)]"/>
                <filter string="Is free" name="filter_name" domain="[('patient_ids', '=', False)]"/>       
            </search>
        </field>
     </record>   

    <record id='action_doctor' model='ir.actions.act_window'> 
        <field name='name'>Doctors</field>
        <field name='res_model'>hr.hospital.doctor</field> 
        <field name='view_mode'>tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This list will display the doctors of our hospital.
            </p>
        </field>
    </record>
</odoo>