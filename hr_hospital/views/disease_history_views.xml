<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="disease_history_tree_view" model="ir.ui.view">
        <field name="name">Disease History Tree</field>
        <field name="model">hr.hospital.disease.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="patient_id"/>
                <field name="disease_ids"/>
            </tree>
        </field>
    </record>

    <record id='action_disease_history' model='ir.actions.act_window'> 
        <field name='name'>Disease history</field>
        <field name='res_model'>hr.hospital.disease.history</field> 
        <field name='view_mode'>tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This list will display the disease history.
            </p>
        </field>
    </record>
</odoo>