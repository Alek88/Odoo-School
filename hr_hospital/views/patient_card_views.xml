<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_card_form_view" model="ir.ui.view">
        <field name="name">Patient Card Form</field>
        <field name="model">hr.hospital.patient.card</field>
        <field name="arch" type="xml">
            <form string="Patient card">
                <sheet>
                    <div class='oe_title'>
                        <h3>
                            <field name='name'/>
                        </h3>
                    </div>
                    <field name='partient'/>
                    <field name='disease_history'/>
                </sheet>
            </form>
        </field>
    </record>

    <record id='action_patient_card' model='ir.actions.act_window'> 
        <field name='name'>Patients cards</field>
        <field name='res_model'>hr.hospital.patient.card</field> 
        <field name='view_mode'>tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This list will display the patients cards.
            </p>
        </field>
    </record>
</odoo>
